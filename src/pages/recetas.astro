---
import Layout from '../layouts/Layout.astro';

const recipes = [
  {
    id: 1,
    title: 'Bowl de Quinoa y Vegetales',
    description: 'Delicioso bowl con quinoa, aguacate, zanahoria y aderezo de limón',
    prepTime: '15 min',
    calories: '350 kcal',
    image: '/images/recipes/quinoa-bowl.jpg',
    category: 'Almuerzo'
  },
  {
    id: 2,
    title: 'Hamburguesas de Lentejas',
    description: 'Hamburguesas veganas ricas en proteínas y fibra',
    prepTime: '30 min',
    calories: '280 kcal',
    image: '/images/recipes/lentil-burger.jpg',
    category: 'Cena'
  },
  {
    id: 3,
    title: 'Smoothie Verde Energizante',
    description: 'Batido verde con espinaca, plátano y semillas de chía',
    prepTime: '5 min',
    calories: '180 kcal',
    image: '/images/recipes/green-smoothie.jpg',
    category: 'Desayuno'
  },
  {
    id: 4,
    title: 'Ensalada César Vegana',
    description: 'Clásica ensalada César con aderezo de anacardos',
    prepTime: '20 min',
    calories: '220 kcal',
    image: '/images/recipes/vegan-caesar.jpg',
    category: 'Almuerzo'
  },
  {
    id: 5,
    title: 'Curry de Garbanzos',
    description: 'Delicioso curry cremoso con garbanzos y espinacas',
    prepTime: '25 min',
    calories: '320 kcal',
    image: '/images/recipes/chickpea-curry.jpg',
    category: 'Cena'
  },
  {
    id: 6,
    title: 'Tacos de Hongos',
    description: 'Tacos vegetarianos con hongos salteados y guarniciones frescas',
    prepTime: '20 min',
    calories: '290 kcal',
    image: '/images/recipes/mushroom-tacos.jpg',
    category: 'Cena'
  }
];

const categories = ['Todas', 'Desayuno', 'Almuerzo', 'Cena', 'Postres', 'Snacks'];
---

<Layout title="Recetas Vegetarianas | Nutrición Saludable" description="Descubre nuestras deliciosas recetas vegetarianas fáciles de preparar y llenas de sabor. Cocina saludable nunca fue tan sencillo.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-green-600 to-green-800 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Recetas Vegetarianas</h1>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto">Descubre platos deliciosos, nutritivos y fáciles de preparar para mantener una alimentación saludable</p>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="py-8 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-2 md:gap-4">
        {categories.map(category => (
          <button 
            class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${category === 'Todas' ? 'bg-green-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}
          >
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Recipes Grid -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center">Nuestras Recetas Destacadas</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recipes.map(recipe => (
          <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
            <img 
              src={recipe.image} 
              alt={recipe.title}
              class="w-full h-48 object-cover"
              loading="lazy"
            />
            <div class="p-6">
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-green-600">{recipe.category}</span>
                <span class="text-sm text-gray-500">{recipe.prepTime}</span>
              </div>
              <h3 class="text-xl font-bold mb-2">{recipe.title}</h3>
              <p class="text-gray-600 mb-4">{recipe.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">{recipe.calories}</span>
                <button class="text-green-600 hover:text-green-700 font-medium">Ver Receta →</button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="bg-gray-100 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">¿Quieres más recetas como esta?</h2>
      <p class="text-gray-600 max-w-2xl mx-auto mb-8">Suscríbete a nuestro boletín semanal y recibe las mejores recetas vegetarianas directamente en tu correo.</p>
      <div class="max-w-md mx-auto flex">
        <input 
          type="email" 
          placeholder="Tu correo electrónico" 
          class="flex-grow px-4 py-3 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-green-500"
        >
        <button class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-r-lg font-medium transition-colors">
          Suscribirme
        </button>
      </div>
    </div>
  </section>
</Layout>