---
interface Props {
  content?: string;
  className?: string;
}

const { content, className = '' } = Astro.props;
---

<article class={`prose prose-lg max-w-none 
  /* Estilos generales para todos los títulos */
  prose-headings:font-bold 
  prose-headings:font-sans 
  prose-headings:leading-tight
  prose-headings:mb-6
  
  /* Estilo específico para h1 (título principal) */
  prose-h1:text-4xl 
  prose-h1:md:text-5xl 
  prose-h1:text-primary 
  prose-h1:mb-8
  prose-h1:border-b-2 
  prose-h1:border-primary/20 
  prose-h1:pb-3
  
  /* Estilos para h2 */
  prose-h2:text-2xl
  prose-h2:md:text-3xl
  prose-h2:text-gray-800
  prose-h2:mt-10
  prose-h2:mb-4
  
  /* Estilos para párrafos */
  prose-p:text-gray-700 
  prose-p:leading-relaxed
  prose-p:my-4
  
  /* Estilos para enlaces */
  prose-a:text-primary 
  hover:prose-a:text-primary/80
  prose-a:font-medium
  prose-a:transition-colors
  
  /* Otros estilos */
  prose-strong:text-gray-900 
  prose-ul:list-disc 
  prose-ol:list-decimal 
  prose-li:marker:text-primary 
  prose-blockquote:border-l-4
  prose-blockquote:border-l-primary 
  prose-blockquote:bg-gray-50 
  prose-blockquote:px-6 
  prose-blockquote:py-4 
  prose-blockquote:rounded-lg 
  prose-img:rounded-lg 
  prose-img:shadow-md 
  prose-img:mx-auto 
  ${className}`}>
  <slot />
  
  <style>
    /* Estilos personalizados adicionales */
    h1 {
      position: relative;
      display: inline-block;
    }
    
    h1::after {
      content: '';
      position: absolute;
      width: 60px;
      height: 4px;
      background: linear-gradient(90deg, var(--color-primary), var(--color-primary-400));
      bottom: -8px;
      left: 0;
      border-radius: 2px;
    }
  </style>
</article>
