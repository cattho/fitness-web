---
const recipes = [
  {
    title: 'Bowl de Quinoa con Garbanzos Especiados',
    image: '/placeholder.svg?height=400&width=400',
    time: '30 min',
    calories: '450 kcal',
    protein: '18g',
  },
  {
    title: 'Smoothie Verde Energ√©tico Post-Entreno',
    image: '/placeholder.svg?height=400&width=400',
    time: '5 min',
    calories: '280 kcal',
    protein: '22g',
  },
  {
    title: 'Curry de Lentejas con Espinacas',
    image: '/placeholder.svg?height=400&width=400',
    time: '40 min',
    calories: '380 kcal',
    protein: '16g',
  },
  {
    title: 'Tacos de Tofu Crujiente con Aguacate',
    image: '/placeholder.svg?height=400&width=400',
    time: '25 min',
    calories: '420 kcal',
    protein: '20g',
  },
];
---

<section id="recetas" class="py-20 sm:py-24 bg-gradient-to-br from-primary/5 to-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <h2 class="text-balance text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        Recetas Saludables
      </h2>
      <p class="mt-4 text-pretty text-lg text-gray-600">
        Deliciosas, nutritivas y perfectas para tus objetivos fitness
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {recipes.map((recipe) => (
        <div class="group overflow-hidden rounded-2xl bg-white shadow-md transition-all hover:shadow-xl">
          <div class="aspect-square overflow-hidden">
            <img
              src={recipe.image || "/placeholder.svg"}
              alt={recipe.title}
              class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
            />
          </div>
          <div class="p-5">
            <h3 class="text-balance text-lg font-semibold text-gray-900 group-hover:text-primary">
              {recipe.title}
            </h3>
            <div class="mt-4 flex flex-wrap gap-3 text-sm text-gray-600">
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {recipe.time}
              </div>
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                {recipe.calories}
              </div>
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {recipe.protein}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <a
        href="/recetas"
        class="inline-flex items-center justify-center rounded-lg border-2 border-primary bg-white px-6 py-3 text-base font-semibold text-primary transition-all hover:bg-primary hover:text-white"
      >
        Ver todas las recetas
      </a>
    </div>
  </div>
</section>
